<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textview_settingpage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/dinbold"
            android:text="Enter credential app"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/edittext_settingpage_merchantname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Merchant Name" />

        <EditText
            android:id="@+id/edittext_settingpage_clientid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Client Id" />

        <EditText
            android:id="@+id/edittext_settingpage_sharedkey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Input SharedKey" />

        <TextView
            android:id="@+id/textview_settingpage_radiotitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Select Environment Server"/>

        <RadioGroup
            android:id="@+id/radiogroup_settingpage_environmentgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radiobutton_settingpage_sunbox"
                android:layout_width="wrap_content"
                android:text="Sandbox"
                android:checked="true"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/radiobutton_settingpage_production"
                android:layout_width="wrap_content"
                android:text="Production"
                android:layout_height="wrap_content"/>

        </RadioGroup>

        <TextView
            android:id="@+id/textview_settingpage_resultpagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Active Result Page Payment"/>

        <RadioGroup
            android:id="@+id/radiogroup_settingpage_resultpagegroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radiobutton_settingpage_yes"
                android:layout_width="wrap_content"
                android:text="Yes"
                android:checked="true"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/radiobutton_settingpage_no"
                android:layout_width="wrap_content"
                android:text="No"
                android:layout_height="wrap_content"/>

        </RadioGroup>

        <Button
            android:id="@+id/button_settingpage_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorAccent"
            android:text="OK"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>