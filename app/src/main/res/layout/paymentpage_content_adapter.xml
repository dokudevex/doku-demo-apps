<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintlayout_menu_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/textview_content_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/dokuregular"
        android:lineSpacingMultiplier="1.2"
        android:textColor="#45545b"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_content_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageview_content_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/textview_content_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textview_content_title" />

    <View
        android:id="@+id/view_content_title"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="5dp"
        android:background="#eaeaea"
        app:layout_constraintStart_toStartOf="@+id/textview_content_title"
        app:layout_constraintTop_toBottomOf="@+id/imageview_content_logo"/>

</androidx.constraintlayout.widget.ConstraintLayout>